<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bac"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京xxx供应商"
                android:textColor="@color/heise"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_arrears_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="欠供应商款：&#165;125.00"
                android:textColor="@color/touzi_huise"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="负责人：无"
                android:textColor="@color/touzi_huise"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_payment"
            android:layout_width="45dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/yuanjiao_but_hongse"
            android:gravity="center"
            android:text="付款"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:id="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide" />
</LinearLayout>
