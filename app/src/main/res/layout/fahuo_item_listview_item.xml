<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/guige_shou"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center_horizontal"
            android:text="规格（库存）"
            android:textColor="@color/shouye_huise"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:text="欠货"
            android:textColor="@color/shouye_huise"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fahuo_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="发货数"
            android:textColor="@color/shouye_huise"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:background="@color/guige_zhan"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/guige_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="规格"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/heise"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/jiage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:text="100.00"
            android:textColor="@color/shouye_huise"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/jian"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size25"
                android:layout_gravity="center"
                android:background="@drawable/icon_jian"
                android:focusable="false"
                android:padding="5dp" />

            <TextView
                android:id="@+id/shuliang"
                android:layout_width="@dimen/size45"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:hint="0"
                android:inputType="number"
                android:maxLength="4"
                android:numeric="integer"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:textColor="@color/shouye_huise"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/jia"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size25"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:background="@drawable/icon_add"
                android:focusable="false" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>